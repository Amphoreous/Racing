{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\MSBuild\\Current\\Bin\\amd64\\MSBuild.exe",
            "args": [
                "Racing.sln",
                "/p:Configuration=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "build release",
            "type": "process",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\MSBuild\\Current\\Bin\\amd64\\MSBuild.exe",
            "args": [
                "Racing.sln",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Clean",
            "type": "process",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\MSBuild\\Current\\Bin\\amd64\\MSBuild.exe",
            "args": [
                "Racing.sln",
                "/t:Clean"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "UpdateMake",
            "type": "process",
            "command": "./premake5",
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "args": [
                "gmake"
            ],
            "windows": {
                "command": "./premake5.exe"
            },
            "linux": {
                "command": "./premake5"
            },
            "osx": {
                "command": "premake5.osx"
            },
            "group": "build"
        }
    ]
}
